<?xml version="1.0" encoding="utf-8" ?>
<manifest
	package="manolegeorge.watchlog"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools">

	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

	<application
		android:allowBackup="false"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="false"
		android:theme="@style/AppTheme"
		tools:ignore="GoogleAppIndexingWarning">

		<activity
			android:name=".SplashActivity"
			android:screenOrientation="portrait"
			android:theme="@style/AppTheme.SplashActivity"
			android:exported="true">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity
			android:name=".LoginActivity"
			android:screenOrientation="portrait"
			android:exported="false"
			android:theme="@style/AppTheme.SplashActivity" />

		<activity
			android:name=".ResetPasswordActivity"
			android:screenOrientation="portrait"
			android:exported="false"
			android:theme="@style/AppTheme.NoActionBar" />

		<activity
			android:name=".FavouriteTVShowsActivity"
			android:screenOrientation="portrait"
			android:exported="false"
			android:theme="@style/AppTheme.NoActionBar" />

		<activity
			android:name=".RegisterActivity"
			android:screenOrientation="portrait"
			android:exported="false"
			android:theme="@style/AppTheme.SplashActivity" />

		<activity
			android:name=".MainActivity"
			android:screenOrientation="portrait"
			android:exported="false"
			android:theme="@style/AppTheme.NoActionBar" />

		<activity
			android:name=".WatchedMoviesActivity"
			android:screenOrientation="portrait"
			android:exported="false"
			android:theme="@style/AppTheme.NoActionBar" />

		<activity
			android:name=".HiddenWatchedMoviesActivity"
			android:screenOrientation="portrait"
			android:exported="false"
			android:theme="@style/AppTheme.NoActionBar" />

		<activity
			android:name=".TVShowsByGenreActivity"
			android:screenOrientation="portrait"
			android:exported="false"
			android:theme="@style/AppTheme.NoActionBar" />

		<activity
			android:name=".FavouriteMoviesActivity"
			android:screenOrientation="portrait"
			android:exported="false"
			android:theme="@style/AppTheme.NoActionBar" />

		<activity
			android:name=".MoviesActivity"
			android:screenOrientation="portrait"
			android:exported="false"
			android:theme="@style/AppTheme.NoActionBar" />

		<activity
			android:name=".SearchMoviesActivity"
			android:screenOrientation="portrait"
			android:exported="false"
			android:theme="@style/AppTheme.NoActionBar" />

		<activity
			android:name=".WatchedTVShowsActivity"
			android:screenOrientation="portrait"
			android:exported="false"
			android:theme="@style/AppTheme.NoActionBar" />

		<activity
			android:name=".MoviesByGenreActivity"
			android:screenOrientation="portrait"
			android:exported="false"
			android:theme="@style/AppTheme.NoActionBar" />

		<activity
			android:name=".ViewMovieActivity"
			android:screenOrientation="portrait"
			android:exported="false"
			android:theme="@style/AppTheme.NoActionBar" />

		<activity
			android:name=".TVShowsActivity"
			android:screenOrientation="portrait"
			android:exported="false"
			android:theme="@style/AppTheme.NoActionBar" />

		<activity
			android:name=".ViewTVShowActivity"
			android:screenOrientation="portrait"
			android:exported="false"
			android:theme="@style/AppTheme.NoActionBar" />

		<activity
			android:name=".ViewTVShowSeasonActivity"
			android:screenOrientation="portrait"
			android:exported="false"
			android:theme="@style/AppTheme.NoActionBar" />

		<activity
			android:name=".MyFriendsActivity"
			android:screenOrientation="portrait"
			android:exported="false"
			android:theme="@style/AppTheme.NoActionBar" />

		<activity
			android:name=".FriendRequestsActivity"
			android:screenOrientation="portrait"
			android:exported="false"
			android:theme="@style/AppTheme.NoActionBar" />

		<activity
			android:name=".AccountSettingsActivity"
			android:screenOrientation="portrait"
			android:exported="false"
			android:theme="@style/AppTheme.NoActionBar" />

		<activity
			android:name=".ViewProfilePictureActivity"
			android:screenOrientation="portrait"
			android:exported="false"
			android:theme="@style/AppTheme.ViewProfilePictureActivity" />

		<activity
			android:name=".ViewUserProfileActivity"
			android:screenOrientation="portrait"
			android:exported="false"
			android:theme="@style/AppTheme.NoActionBar" />

		<service
			android:name=".WatchLogFirebaseMessagingService"
			android:exported="false"
			tools:ignore="ExportedService">
			<intent-filter>
				<action android:name="com.google.firebase.MESSAGING_EVENT" />
			</intent-filter>
		</service>

		<service
			android:name=".WatchLogFirebaseInstanceIDService"
			android:exported="false"
			tools:ignore="ExportedService">
			<intent-filter>
				<action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
			</intent-filter>
		</service>

	</application>

</manifest>
